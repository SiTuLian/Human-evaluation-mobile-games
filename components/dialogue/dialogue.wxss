/* components/dialogue/dialogue.wxss */
page{
  width: 100%;
  height: 100%;
}

.view-text{
  padding: 2px;
  color: #fff;
}

.text{
  font-weight: bold;
  color: red;
  font-size: 35rpx;
}

.dialogue {
position:absolute;
width:30%;
height:24%;
left: 51%;
top: 18%;
background:#555;
border-radius:5px; /* 圆角 */
margin:30px auto 0;
z-index: 1;
}

.dialogue .triangle {
position:absolute;
top:20%;
right:-16px; /* 圆角的位置需要细心调试哦 */
width:0;
height:0;
font-size:0;
border:solid 8px;
border-color:transparent transparent transparent #555;
}